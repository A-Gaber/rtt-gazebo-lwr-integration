import("rtt_ros")
ros.import("lwr_state_publisher")

loadComponent("state_pub","LWRStatePublisher")
setActivity("state_pub",0.01,LowestPriority,ORO_SCHED_RT)

state_pub.loadService("rosparam")
state_pub.rosparam.getRelative("robot_name")

connectPeers(state_pub.robot_name,"state_pub")

state_pub.configure()
state_pub.start()

