
import("rtt_ros")
ros.import("lwr_state_publisher")

loadComponent("LWRStatePublisher","LWRStatePublisher")
setActivity("LWRStatePublisher",0.001,LowestPriority,ORO_SCHED_OTHER)

LWRStatePublisher.loadService("rosparam")
LWRStatePublisher.rosparam.getPrivate("robot_name")

connectPeers(LWRStatePublisher.robot_name,"LWRStatePublisher")

LWRStatePublisher.configure()
LWRStatePublisher.start()

